{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title 'Bienvenu Ã  l\'espace d\'Administration' %}

{% block main %}

	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="row">
					<div class="col-6 alert-info">
						<span class="display-3">6</span>
						Restaurants</div>
					<div class="col-6 alert-success">
						<span class="display-3">6</span>
						Utilisateurs</div>
				</div>
			</div>
			<div class="col-12">
				<div class="row mt-3">
					<div class="col-6">
						<h3>Liste des Restaurants</h3>
						<ul class="list-group">
							{% for restaurant in Restaurant %}
								<li class="list-group-items d-flex justify-content-between align-items-center">
									{{restaurant.nom}}
									{{restaurant.lieu}}
								</li>
							{% endfor %}
						</ul>
					</div>
					<div class="col-6">
						<h3>Liste des Utilisateurs</h3>
						<ul class="list-group">
							{% for user in Users %}
								<li class="list-group-items d-flex justify-content-between align-items-center">
									{{user.prenom}}
									{{user.nom}}

								</li>
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
